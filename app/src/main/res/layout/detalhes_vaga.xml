<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_blue"
    android:weightSum="1">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_weight="0.06"
        android:src="@drawable/ic_assignment_white_18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Analista de redes"
        android:id="@+id/textView5"
        android:layout_weight="0.06"
        android:fontFamily="@string/Texto_apresentacao_home"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_desc_vaga"
        android:id="@+id/textView6"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="31dp"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Concorrer"
        android:id="@+id/button4"
        android:layout_marginBottom="36dp"
        android:background="#2DC2FC"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Compartilhar"
        android:id="@+id/button5"
        android:background="#2DC2FC"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>